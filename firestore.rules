rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Kategori-bazlı collection'lar (İngilizce isimlerle)
    match /rings/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /bracelets/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /bangles/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /necklaces/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /earrings/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /sets/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Eski collection (backward compatibility için)
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
